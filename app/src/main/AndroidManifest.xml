<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.giphyapi">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:name=".App">
        <activity
                android:name=".ui.gif.create.CreateGifActivity"
                android:label="@string/title_activity_create_gif">
        </activity>
        <activity
                android:name=".ui.gif.detail.DetailGifActivity"
                android:label="@string/title_activity_detail_gif">
        </activity>
        <activity android:name=".ui.gif.list.ListGifActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>